<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/card_background">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B944ac25"
        android:id="@+id/tool1"
        android:titleTextColor="@color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myscroll"
        android:layout_below="@+id/tool1">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/logo"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/qanda"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baby Care"
                        android:id="@+id/title"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_below="@+id/logo"
                        android:layout_centerHorizontal="true"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/below"
                        android:background="@color/colorAccent"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="အခ်က္အလက္မ်ားအားျဖည့္စြက္ပါ။"
                        android:layout_below="@+id/below"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/infotext" />
                   <!-- <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="date"
                        android:layout_below="@+id/infotext"
                        android:id="@+id/post_name"
                        android:hint="ကျောင်းသားအမည်"
                        android:padding="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/post_text_style" />-->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_below="@+id/infotext"
                        android:id="@+id/post_fact"
                        android:hint="ေဆြးေႏြးခ်က္အားျဖည့္ပါ။"
                        android:inputType="text"
                        android:padding="10dp"
                        android:background="@drawable/post_text_style"
                        android:layout_marginTop="10dp"/>



                    <TextView
                        android:layout_below="@+id/post_fact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:id="@+id/sail"
                        android:text="ဓာတ္ပံုျဖည့္ရန္"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/sail"
                        android:background="@color/card_background"
                        android:id="@+id/linear">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@mipmap/qanda"
                            android:id="@+id/post_image"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear"
                        android:layout_marginTop="16dp"
                        android:layout_centerHorizontal="true">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/post_ok"
                            android:text="တင္မည္"
                            android:textColor="@color/white"
                            android:background="@drawable/button_style"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/abscancel"
                            android:layout_toRightOf="@+id/post_ok"
                            android:text="ပယ္ဖ်က္မည္"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:background="@drawable/button_style"/>
                    </RelativeLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
