<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B944ac25"
        android:id="@+id/tool3"
        android:titleTextColor="@color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/question"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool3"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="အေမး"
                android:id="@+id/ques"
                android:layout_margin="8dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_toRightOf="@+id/ques"
               android:layout_marginLeft="8dp"
               android:layout_height="wrap_content">
               <View
                   android:layout_width="1dp"
                   android:background="#0f0f0f"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doctorquestion_text"
                android:layout_weight="1"
                android:text="ajdkfjsgkajdfkgjkgjkfjddfjgkdjgkld;sjgdksldsgjdgj"
                android:layout_margin="8dp"/>
           </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/question"
        android:layout_height="wrap_content"
        android:id="@+id/visibleanswer"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="အေျဖ"
            android:layout_marginLeft="8dp"
            android:id="@+id/answer"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/answer"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="4dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2.5dp"
                    android:layout_margin="16dp"
                    android:textSize="16dp"
                    android:id="@+id/answertexttt"
                    android:text="answeransweransweransweransweransweranswer
answeransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweransweranswer"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:id="@+id/visibleEdit">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:id="@+id/repiyButton"
            android:layout_alignParentRight="true"
           />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reply_text"
      android:layout_toLeftOf="@+id/repiyButton"
        />

    </RelativeLayout>
</RelativeLayout>
