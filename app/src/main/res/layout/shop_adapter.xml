<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="2dp"
        app:cardMaxElevation="5dp"
        android:layout_height="330dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/img_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"


                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/shop_image"
                    android:src="@drawable/sky"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"/>
                <ImageView
                    android:id="@+id/shop_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_refresh_icon"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/shop_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />



            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shop_name"
                android:text="Shop Name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/img_layout"
                android:textColor="@color/colorPrimary"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.15dp"
                android:background="#646161"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/shop_view"
                android:layout_below="@+id/shop_name"
                />
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/d6"
                android:layout_marginTop="10dp"
                android:background="@drawable/phone_circle"
                android:layout_below="@+id/shop_view"
                android:layout_marginLeft="5dp"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phone"
                    android:elevation="6dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/shop_ph_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:text="09787816733"
                android:id="@+id/shop_ph_no"
                android:textColor="#363434"
                android:layout_toRightOf="@+id/d6"
                android:layout_below="@+id/shop_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/shop_address"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/shop_ph_no"
                android:layout_marginLeft="5dp"
                android:text="ရန္ကုန္တိုင္းေဒသႀကီး၊ လိွဳင္ၿမိဳ႕နယ္၊ ၈၆လမ္းနွင္႔ ၈၇ လမ္းၾကား"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See More"
                android:id="@+id/shop_see_more"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:paddingRight="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/shop_address"
               />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>