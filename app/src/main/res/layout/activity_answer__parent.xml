<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B944ac25"
        android:id="@+id/tool6"
        android:titleTextColor="@color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerCard"
            android:layout_margin="8dp"
            android:layout_below="@+id/tool6">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="္အေမး"
             android:layout_margin="8dp"
             android:id="@+id/textquestion"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textquestion">
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:layout_toRightOf="@+id/textquestion"
    android:id="@+id/view"
    android:background="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view"
                android:id="@+id/answerquestion_text"
                android:text="ajdkfjsgkajdfkgjkgjkfjddfjgkdjgkld;sjgdksldsgjdgj
;ljvklj;vkjklj;kldjkdljkdls;g"

                android:layout_margin="8dp"/>
            </LinearLayout>
        </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:id="@+id/visiblelayout"
    android:layout_below="@+id/answerCard">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answertext"
        android:text="အေျဖ"
        android:layout_margin="8dp"
        android:textColor="#c9214ab9"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_toRightOf="@+id/answertext"
        android:visibility="visible"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c9214ab9"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e9ffffff"
            android:text="ajgkl;fjgksldsjg;klsjgklfjjkg;kljkl
            ;jkjdk;jdkl;kjd;k;k"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:id="@+id/answertextview"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</RelativeLayout>
